BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.4
        TextInput:
            id: input_miles
            font_size: 50
            text: '34'
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.1
            Button:
                text: 'Up'
                on_press: app.handle_change(1)
            Button:
                text: 'Down'
                on_press: app.handle_change(-1)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculate()
    Label:
        font_size: 50
        text: app.km_output
        color: (1, 1, 0, 1)
